{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make --directory=${workspaceFolder}/kernel/ kernel && make --directory=${workspaceFolder}/kernel/ buildimg",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "cmd.exe /C start cmd.exe /C U:/${workspaceFolder}/kernel/run.bat"
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "cmd.exe /C start cmd.exe /C U:/${workspaceFolder}/kernel/debug.bat"//"powershell.exe \"Start-Process ./kernel/runDebug.bat\""
        },
        {
            "label": "Build and Debug",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Debug"
            ]
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Run"
            ]
        }
    ]
}